@page "/menus"
@using Models
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.FluentUI.AspNetCore.Components
@inject Repository.MenuRepository menuRep
@inject NavigationManager NavigationManager


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in menus)
            {
                <div class="col-md-4">
                    <FluentCard>
                        <FluentCardTitle>@item.Name</FluentCardTitle>
                        <div class="card-body">
                            <p class="card-text">@item.Content</p>
                            <p class="card-text">@item.Price</p>
                            <div class="d-flex justify-content-between align-items-center">
                                @* <div class="btn-group">
                                    <FluentButton class="btn btn-sm btn-outline-secondary" onclick="@(() => ViewMenu(item.MenuId))">View</FluentButton>
                                    <FluentButton class="btn btn-sm btn-outline-secondary" onclick="@(() => EditMenu(item.MenuId))">Edit</FluentButton>
                                </div> *@
                            </div>
                        </div>
                    </FluentCard>
                    
                </div>
            }
        </div>
    </div>
</div>

@code {
    List<Menu> menus = new List<Menu>();

    private void ViewMenu(int menuId)
    {
        NavigationManager.NavigateTo($"/viewmenu/{menuId}");
    }

    private void EditMenu(int menuId)
    {
        NavigationManager.NavigateTo($"/editmenu/{menuId}");
    }
    protected override async Task OnInitializedAsync()
    {
        menus =await menuRep.GetAllAsync();

        
    }
    
}
