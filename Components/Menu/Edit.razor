@page "/editmenu/{menuId}"
@using PalateParadise.Models
@inject NavigationManager NavigationManager
@inject Repository.MenuRepository MenuRepository

<h3>Edit Menu Item</h3>

@if (menu != null)
{
    <EditForm Model="@menu" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        
        <div class="form-group">
            <label for="itemName">Name:</label>
            <InputText id="itemName" class="form-control" @bind-Value="menu.Name" />
        </div>
        <div class="form-group">
            <label for="itemName">Name:</label>
            <InputText id="itemName" class="form-control" @bind-Value="menu.Name" />
        </div>
        <div class="form-group">
            <label for="itemName">Name:</label>
            <InputText id="itemName" class="form-control" @bind-Value="menu.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </EditForm>
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public int MenuId { get; set; }

    private Menu menu;

    public Edit(Menu menu)
    {
        this.menu = menu;
    }

    protected override async Task OnInitializedAsync()
    {
        menu = await MenuRepository.GetById(MenuId);
    }

    private async Task HandleValidSubmit()
    {
        MenuRepository.Update(menu);
        
        NavigationManager.NavigateTo("/menu");
    }
}
